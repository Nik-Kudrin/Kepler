<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/statico")

    @RenderSection("scripts", required: false)

</head>
<body>
    <div id="wrapper">
        <nav class="navbar navbar-default navbar-cls-top " role="navigation" style="margin-bottom: 0">
            <div class="navbar-header">
                <a class="navbar-brand" href="/">KEPLER</a>
            </div>
        </nav>
        <!-- /. NAV TOP -->

        <nav class="navbar-default navbar-side" role="navigation">
            @RenderPage("~/Views/Home/LeftMenu.cshtml")
        </nav>
        <!-- /. NAV SIDE -->


        <div id="page-wrapper">
            <div id="page-inner">
                @RenderBody()
            </div>
            <!-- /. PAGE INNER -->
        </div>
        <!-- /. PAGE WRAPPER -->
    </div>
    <!-- /. WRAPPER -->
    <div id="footer-sec">
        &copy; 2014 YourCompany | Design By : <a href="http://www.binarytheme.com/" target="_blank">BinaryTheme.com</a>
    </div>

    <!-- /. MODAL WINDOW -->
    <div class="modal fade" id="crud-modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" style="display: none;">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                    <h4 class="modal-title" id="myModalLabel"></h4>
                </div>
                <div class="modal-body">
                </div>
                <div class="modal-footer">
                </div>
            </div>
        </div>
    </div>

    <script type="text/javascript">
        function loadModalWin(modalWinObj, modalWinAction) {
            switch (modalWinAction) {
                case 'create':
                    $('.modal-title').text('Create');
                    $('.modal-body').empty().append('<div class="form-group"><input class="form-control" type="text"></div>');
                    $('.modal-footer').empty().append('<button type="button" class="btn btn-success" data-dismiss="modal">Save</button>');
                    break;
                case 'edit':
                    $('.modal-title').text('Edit');
                    $('.modal-body').empty().append('<div class="form-group"><input class="form-control" type="text" value="' + modalWinObj + '"></div>');
                    $('.modal-footer').empty().append('<button type="button" class="btn btn-success" data-dismiss="modal">Save</button>');
                    break;
                case 'delete':
                    $('.modal-title').text('Delete');
                    $('.modal-body').empty().append('Are you sure want to delete ' + modalWinObj + '?');
                    $('.modal-footer').empty().append('<button type="button" class="btn btn-danger" data-dismiss="modal">Yes</button>');
                    break;
            }
        }
    </script>

</body>
</html>