<div class="col-md-12">
    <div class="col-md-10">
        <div class="form-group">
            <input id="diff_img_saving_path" class="form-control" type="text" readonly>
            <p class="help-block">Diff image path</p>
        </div>
    </div>
    <div class="col-md-2">
        <button type="button" class="btn btn-lg edit_diff_img_path" data-toggle="modal" data-target="#crud-modal" data-content="diff_path_edit">Edit</button>
    </div>
</div>

<script type="text/javascript">
    //
    // Ajax loader
    //
    load_Diff_image_path();
    function load_Diff_image_path() {
        $.ajax({
            url: KeplerServiceUrl + 'GetDiffImageSavingPath',
            type: 'GET',
            success: function (data) {
                $('#diff_img_saving_path').val(data);
            }
        });
    }

    //
    // Popup for edit diff img path
    //
    $(document).on('click', '.edit_diff_img_path', function (e) {
        $('.modal-title').text('Edit diff image path');
        $('.modal-body').empty().append('<div class="form-group"><label>Diff image path</label>' +
            '<input class="form-control" name="diffImageSavingPath" type="text"></div>' +
                    '<div class="alert alert-warning"></div>');
        $('.modal-footer').show().empty().append('<button type="submit" class="btn btn-success">Save</button>');
    });


    //
    // Ajax call for modal popup
    //
    function modal_ajax_call() {
        var url_parameters = 'SetDiffImageSavingPath?' + $('#modal_form').serialize();
        $.ajax({
            type: 'GET',
            url: KeplerServiceUrl + url_parameters,
            success: function (data) {
                $('#modal_form .alert-warning').hide();
                $('#crud-modal button.close').click();
                load_Diff_image_path();
            },
            error: function (xhr) {
                $('#modal_form .alert-warning').show().text(xhr.responseText);
            }
        });
    }
</script>